{
    "name": "@wakey/desktop",
    "version": "0.1.0",
    "private": true,
    "author": "Wakey Team <team@wakey.app>",
    "description": "Wakey Desktop - AI-powered productivity tracker",
    "main": "out/main/index.js",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "package": "electron-builder",
        "package:win": "electron-builder --win",
        "lint": "eslint . --ext .ts,.tsx",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "stress-test": "tsx scripts/stress-test.ts"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@electron-toolkit/utils": "^4.0.0",
        "@supabase/supabase-js": "^2.39.0",
        "@wakey/ai": "workspace:*",
        "@wakey/database": "workspace:*",
        "@wakey/shared": "workspace:*",
        "@wakey/tracking": "workspace:*",
        "active-win": "^8.1.0",
        "better-sqlite3": "^9.2.2",
        "date-fns": "^3.0.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.7.3",
        "lucide-react": "^0.294.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "recharts": "^2.10.0",
        "ws": "^8.19.0",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.2",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/better-sqlite3": "^7.6.8",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "eslint": "^8.55.0",
        "jsdom": "^27.4.0",
        "postcss": "^8.4.32",
        "rollup-plugin-visualizer": "^6.0.5",
        "tailwindcss": "^3.3.6",
        "tsx": "^4.21.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^1.6.1"
    },
    "build": {
        "appId": "com.wakey.app",
        "productName": "Wakey",
        "copyright": "Copyright Â© 2025 Wakey",
        "directories": {
            "output": "release",
            "buildResources": "resources"
        },
        "files": [
            "out/**/*",
            "!**/*.map"
        ],
        "publish": {
            "provider": "github",
            "owner": "HarshalJain-cs",
            "repo": "wakey",
            "releaseType": "release"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon.png",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Wakey"
        },
        "portable": {
            "artifactName": "${productName}-${version}-Portable.${ext}"
        },
        "extraResources": [
            {
                "from": "resources/",
                "to": "resources/",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}