{
    "name": "@wakey/desktop",
    "version": "0.1.0",
    "private": true,
    "description": "Wakey Desktop - AI-powered productivity tracker",
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "package": "electron-builder",
        "package:win": "electron-builder --win",
        "lint": "eslint . --ext .ts,.tsx",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@electron-toolkit/utils": "^4.0.0",
        "@wakey/ai": "workspace:*",
        "@wakey/database": "workspace:*",
        "@wakey/shared": "workspace:*",
        "@wakey/tracking": "workspace:*",
        "active-win": "^8.1.0",
        "better-sqlite3": "^9.2.2",
        "date-fns": "^3.0.0",
        "electron-store": "^8.1.0",
        "lucide-react": "^0.294.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "recharts": "^2.10.0",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.8",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "eslint": "^8.55.0",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "typescript": "^5.3.0",
        "vite": "^5.0.0"
    },
    "build": {
        "appId": "com.wakey.app",
        "productName": "Wakey",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}