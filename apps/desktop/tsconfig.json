{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/renderer/*"
            ],
            "@components/*": [
                "src/renderer/components/*"
            ],
            "@hooks/*": [
                "src/renderer/hooks/*"
            ],
            "@pages/*": [
                "src/renderer/pages/*"
            ],
            "@styles/*": [
                "src/renderer/styles/*"
            ]
        },
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}